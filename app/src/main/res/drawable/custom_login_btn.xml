<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	
	<item android:state_pressed="true">         
	    <shape android:shape="rectangle">
			<corners android:radius="3dip" />
			<stroke android:width="1dip" android:color="#f96f67" />
			<gradient android:angle="-90" android:endColor="#f91e10" android:startColor="#f97e76" />    
	</shape>     
	</item>
	<item android:state_focused="true">         
		<shape android:shape="rectangle">
			<corners android:radius="3dip" />
			<stroke android:width="1dip" android:color="#f96f67" />
			<solid android:color="#f96f67" />
		</shape>
	</item>
	<item>
		<shape android:shape="rectangle">
			<corners android:radius="3dip" />
			<stroke android:width="1dip" android:color="#f96f67" />
			<gradient android:angle="-90" android:endColor="#f97e76" android:startColor="#f96f67" />
		</shape>
	</item>

</selector>